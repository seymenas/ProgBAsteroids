@startuml

class GameMaster {
    -int screenWidth;
    -int screenHeight;
    -raylib::Window window;
    -raylib::Texture background_texture;
    -int fontSize;

    -Spaceship ship;

    -std::vector<Bullet> bullets{};
    -float bulletCooldown;
    -float timeSinceLastShot;

    -float asteroidCooldown;
    -float timeSinceLastAsteroid;
    -std::vector<Asteroid> asteroids{};

    -int lifes;
    -int score;
    -int fontSize;

    +GameMaster();
    +void manageGame();
    -void createAsteroids();
    -void handleKeyboardInput();
}

class GameObject {
    #float x;
    #float y;
    #float rotation;
    #double speed;
    #raylib::Texture texture;

    +GameObject();
    +float get_x();
    +float get_y();
    #virtual void move();
    #virtual void draw();
}

SpaceShip --|> GameObject
Target --|> GameObject
Bullet --|> GameObject

